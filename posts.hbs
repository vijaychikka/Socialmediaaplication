<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Social Media Application</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous">
    </head>
    <body>
        <div class="container row">
            <div class="col-4">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{userInfo.name}}</h5>
                        <h6 class="card-subtitle mb-2 text-body-secondary">
                            @{{userInfo.profile}}</h6>
                        <p class="card-text">{{userInfo.headline}}</p>
                    </div>
                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@mdo">Create POST</button>

                </div>

                <div>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">New message</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/addPosts" method="post">
          <div class="mb-3">
            <input type="hidden" name="profile" value={{userInfo.profile}} class="form-control" id="profile">
          </div>
          <div class="mb-3">
            <label for="message-text" class="col-form-label">Message:</label>
            <textarea class="form-control" name="content" id="content"></textarea>
          </div>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Post</button>
        </form>
      </div>
    </div>
  </div>
</div>
                </div>
            </div>
            <div class="col-8">
            {{#each data}}
                <div class="card m-2">
                    <div class="card-header">
                        Posts
                    </div>
                    <div class="card-body">
                        {{!-- <h5 class="card-title">Special title treatment</h5> --}}
                        <p class="card-text">{{content}}</p>
                        <form action="/like" method="post">
                            <input type="hidden" name="content" value="{{content}}"/>
                            <button type="submit" class="btn btn-danger">Likes {{likes}}</button>
                        </form>
                         <form action="/shares" method="post">
                            <input type="hidden" name="content" value="{{content}}"/>
                            <button type="submit" class="btn btn-danger">Shares {{shares}}</button>
                        </form>
                           <form action="/delete" method="post">
                            <input type="hidden" name="content" value="{{content}}"/>
                            <button type="submit" class="btn btn-danger">DELETE</button>
                        </form>
                        {{!-- <a href="#" class="btn btn-primary">Likes {{likes}}</a>
                        <a href="#" class="btn btn-primary">Shares {{shares}}</a> --}}
                    </div>
                </div>
            {{/each}}
            </div>
        </div>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
    </body>
</html>